
{
  "name": "icore-desktop",
  "productName": "iCore DualMap",
  "version": "2.4.0",
  "description": "High-performance standalone DualSense mapping engine.",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\" \"electron .\"",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux"
  },
  "dependencies": {
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-updater": "^6.1.0",
    "concurrently": "^8.2.0"
  },
  "build": {
    "appId": "com.gen2viral.icore",
    "productName": "iCore DualMap",
    "files": [
      "electron/**/*",
      "backend/**/*",
      "frontend/build/**/*"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "resources/icon.icns",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "resources/icon.png"
    }
  }
}
