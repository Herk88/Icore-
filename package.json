
{
  "name": "1man1machine-desktop",
  "productName": "1Man1Machine",
  "version": "3.5.0",
  "description": "High-performance standalone DualSense mapping engine by Hernan H with Neural Interceptor logic.",
  "main": "dist-electron/main.js",
  "author": "Hernan H",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:win": "npm run build && electron-builder --win",
    "postinstall": "electron-builder install-app-deps",
    "test": "vitest"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "lucide-react": "0.562.0",
    "@nut-tree/nut-js": "^3.1.2"
  },
  "devDependencies": {
    "electron": "28.0.0",
    "electron-builder": "24.9.1",
    "vite": "5.0.0",
    "@vitejs/plugin-react": "4.2.0",
    "typescript": "5.3.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/node": "20.10.0",
    "concurrently": "8.2.0",
    "wait-on": "7.0.1",
    "vitest": "1.0.0",
    "@testing-library/react": "14.1.0",
    "@testing-library/jest-dom": "6.1.0",
    "tailwindcss": "^3.4.1",
    "postcss": "^8.4.35",
    "autoprefixer": "^10.4.17"
  },
  "build": {
    "appId": "com.hernan.m1m",
    "productName": "1Man1Machine",
    "copyright": "Copyright Â© 2024 Hernan H",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "resources/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "1Man1Machine"
    }
  }
}
